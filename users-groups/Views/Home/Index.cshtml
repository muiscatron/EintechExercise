@model users_groups.Models.PersonGroupViewModel

@{
    ViewData["Title"] = "Index";
}
<div id="modal-placeholder"></div>
<div>
    <p>
        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-group" data-url="@Url.Action("AddGroup")">
            Add group
        </button>
    </p>

    <form asp-controller="Home" asp-action="Index" method="get">
        <div class="row">
            <div class="col-sm">
                Group:
                <select asp-for="Group" class="custom-select" asp-items="Model.Groups">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-sm">
                Person Name: <input type="text" class="form-control" name="SearchString">

            </div>
            <div class="col-sm">
                <button type="submit" class="btn btn-info">
                    Search
                </button>
            </div>
        </div>
    </form>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].GroupName)
            </th>
        </tr>
        <tbody>
            @foreach (var item in Model.Persons)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

