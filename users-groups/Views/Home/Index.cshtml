@model users_groups.Models.PersonGroupViewModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Home" asp-action="Index" method="get">
    <p>
        <select asp-for="Group" asp-items="Model.Groups">
            <option value="">All</option>
        </select>

        Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Persons[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persons[0].GroupName)
        </th>
    </tr>
    <tbody>
    @foreach (var item in Model.Persons)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
        </tr>
    }
    </tbody>
</table>